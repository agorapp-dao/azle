{
    "canisters": {
        "bitcoin": {
            "type": "custom",
            "build": "npx azle bitcoin",
            "root": "src",
            "ts": "src/index.ts",
            "candid": "src/index.did",
            "wasm": "target/wasm32-unknown-unknown/release/bitcoin.wasm.gz",
            "declarations": {
                "output": "test/dfx_generated/bitcoin"
            }
        }
    },
    "networks": {
        "local": {
            "bind": "127.0.0.1:8000",
            "type": "ephemeral"
        }
    },
    "defaults": {
        "bitcoin": {
            "enabled": true,
            "nodes": ["127.0.0.1:18444"],
            "log_level": "info"
        }
    }
}
