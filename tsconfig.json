{
    "compilerOptions": {
        "baseUrl": "src",
        "strict": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["examples", "type_tests", "dist"]
}
